{
    "name": "eventum/slack-unfurl",
    "description": "Slack app for unfurling Eventum issue links",
    "license": "BSD",
    "type": "project",
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Eventum\\SlackUnfurl\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Eventum\\SlackUnfurl\\Test\\": "tests/"
        }
    },
    "require": {
        "php": "^7.1.3",
        "eventum/rpc": "^4.1",
        "monolog/monolog": "^1.23",
        "silex/silex": "~2.0",
        "symfony/dotenv": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5"
    },
    "scripts": {
        "ngrok": [
            "ngrok http 4390"
        ],
        "server": [
            "echo 'Started web server on http://localhost:4390'",
            "php -S localhost:4390 -t web"
        ]
    },
    "scripts-descriptions": {
        "server": "Start http server at http://localhost:4390",
        "ngrok": "Start ngrok, https://api.slack.com/tutorials/tunneling-with-ngrok"
    }
}
